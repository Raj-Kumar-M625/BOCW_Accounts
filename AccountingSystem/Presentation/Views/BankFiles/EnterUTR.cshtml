                <label class="control-label px-2" >Is Bulk Payment</label>
                <input class ="form-check-input ml-2" type="checkbox" asp-for="IsBulkPayment" id="selectedbankPaymentLevel" readonly />
            </div>
            <div class="col-md-6">
                <button value="" type="submit" class=" btn btn-primary float-right mt-2" ><i class="fa fa-save mr-2"></i>Save</button>

            </div>
        </div>
    </form>
</div>
