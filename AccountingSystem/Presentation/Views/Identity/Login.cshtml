<form class="p-3 mt-3" method="post" asp-controller="Identity" asp-action="Login">
            <div class="form-field d-flex align-items-center">
                <input asp-for="Email" type="text" name="Email" id="email" placeholder="Email Address" required>
            </div>
            <div id="OtpField">
                <div class="form-field d-flex align-items-center">
                    <input asp-for="OTP" type="password" name="Otp" id="otp" placeholder="Enter OTP" required>
                </div>
            </div>
            <button class="btn mt-3" id="login">Log in</button>
            
        </form>