@model Presentation.Models.GSTTDS.GsttdsPaymentChallanViewModel

@{
    var UserName = ViewBag.UserName;
    List<int> id = ViewBag.BillId;
    var assementYear = ViewBag.assessmentYear;
}

<h3 class="text-center">GST-TDS PAYMENT-SELECT BANK </h3>
<div class="mt-2 searchgrid">
    <form asp-action="GenerateJsonFile">
        <div class="row">
            @for (int i = 0; i < id.Count; i++)
            {
                <input class="form-control" asp-for="BillsId" value="@id[i]" hidden />
            }
            <div class="form-group  col-md-3">
                <label class="control-label">No. of Vendors </label>
                <input class="form-control" asp-for="NoOfVendors" readonly />
            </div>

            <div class="form-group  col-md-3">
                <label class="control-label">No. of Transactions </label>
                <input class="form-control" asp-for="NoOfTrans" readonly />
            </div>

            <div class="form-group  col-md-3">
                <label class="control-label">₹ GST-TDS Payable Amount </label>
                <input class="form-control" id="gstTdsAmount" asp-for="GSTTDSAmount" readonly />
            </div>
            <div class="form-group  col-md-3 ">
                <label class="control-label">₹ Penalty  </label>
                <input type="number" class="form-control" id="penalty" asp-for="Penalty" />
            </div>
        </div>
        <div class="row">

            <div class="form-group  col-md-3">
                <label class="control-label">₹ Interest  </label>
                <input type="number" class="form-control" id="interest" asp-for="Interest" />
            </div>

            <div class="form-group  col-md-4">
                <label class="control-label">₹ Total GST-TDS Payable Amount </label>
                <input type="number" class="form-control" id="totalGstTdsPayment" asp-for="TotalGSTTDSPayment" readonly />
            </div>

            <div class="form-group  col-md-4">
                <label class="control-label">Assessment Year </label>
                <select class="form-dropdown form-control" asp-for="AssementYearCMID" required>
                    <option value="">--- Select Assement Year ---</option>
                    @foreach (var o in assementYear)
                    {
                        <option value="@o.Id">@o.CodeName</option>
                    }
                </select>
            </div>
            <div class="form-group  col-md-12">
                <button value="" type="submit" class=" btn btn-primary float-right"><i class="fa fa-save mr-2"></i>Save</button>
            </div>

        </div>


    </form>
</div>
<script>
    var gstTdsAmount = @Model.GSTTDSAmount;
</script>

<script type="text/javascript" src="js/GST-TDS/GenearateJSON.js">
   
</script>