@model IEnumerable<CustomerListModel>
@{
    ViewBag.Title = "Customers";
    int customers = Model.Count();
    string displayString = $"{customers} Customers are matching as per search criteria.";
    bool isSuperAdmin = ViewBag.IsSuperAdmin;
}

<table class="table">
    <tr id="dataTableHeader">
        @if (isSuperAdmin)
        {
            <td colspan="2" id="downloadLinkArea">&nbsp;</td>
            <td colspan="4">
                <span>@displayString</span>
                <a href="/admin/AddCustomer" title="Add" class="addInPopup">Add new Customer</a>
            </td>
        }
        else
        {
            <td colspan="2" id="downloadLinkArea">&nbsp;</td>
            <td colspan="4">@displayString</td>
        }
    </tr>
</table>

<table class="table" id="dataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>Customer Name</th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreditLimit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HQCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Latitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Longitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            @if (isSuperAdmin)
            {
                <td>
                    <a href="/admin/EditCustomer?code=@item.Code" title="Edit" class="editInPopup">@item.Code</a>
                </td>
            }
            else
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
            }
            <td>
                @item.Name
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber, "Phone")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreditLimit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HQCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Latitude, "DecimalCoordinates")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Longitude, "DecimalCoordinates")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
        </tr>
    }
    </tbody>
</table>










