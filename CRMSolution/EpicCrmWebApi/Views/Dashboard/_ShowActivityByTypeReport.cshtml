@model ActivityByTypeReportDataModel

@{
    IEnumerable<ActivityByTypeReportModel> reportData = Model.ActivityByTypeReport;
}


<table class="table table-bordered table-striped table-condensed" id="dataTable">
    <tr id="dataTableHeader">
        <td colspan="1" id="downloadLinkArea">&nbsp;</td>
        <td colspan="6">@reportData.Count() rows displayed.</td>
    </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ActivityByTypeReport.First().Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActivityByTypeReport.First().StaffCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActivityByTypeReport.First().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActivityByTypeReport.First().AreaName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActivityByTypeReport.First().ClientType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActivityByTypeReport.First().ActivityType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActivityByTypeReport.First().ActivityCount)
        </th>
    </tr>

    @foreach (var item in reportData)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date, "DatetimeShort")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StaffCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AreaName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClientType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActivityType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActivityCount)
        </td>

    </tr>
    }

</table>

